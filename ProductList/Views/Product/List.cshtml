@model IEnumerable<ProductList.Models.ProductModel>

@{
    ViewData["Title"] = "List";
}
<div class="row">
    <a asp-controller="Product" asp-action="AddProduct">
        <input type="button" class="btn btn-dark float-left mb-3"  value="Add Product" />
    </a>
</div>
@if (Model!=null)
{
    if(Model.Count() >0)
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product_Price)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @item.Product_Id
            </td>
            <td>
                    @item.Product_Name
            </td>
            <td>
                    ₹@item.Product_Price
            </td>
                <td>
                    <a asp-controller="Product" asp-action="EditProduct" asp-route-id="@item.Product_Id" class="btn btn-sm btn-dark"><i class="fa fa-add"></i> Edit</a>
                    <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.Product_Id" class="btn btn-sm btn-dark"><i class="fa fa-trash"></i> Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
}
else {
        <hr>
<div class="text-center mt-4"><b>Products Not Found.</div>
}
}